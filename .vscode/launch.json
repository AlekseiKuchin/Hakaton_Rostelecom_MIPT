{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "args": [
                "--debug",
                "--app",
                "logger",
                "run"
            ],
            "jinja": true
        },
        {
            "name": "Python: import file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "logfile1.log"
            ],
        }
    ]
}